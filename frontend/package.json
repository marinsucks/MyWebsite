{
	"name": "frontend",
	"version": "1.0.0",
	"type": "module",

	"dependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-router-dom": "^6.0.0"
	},

	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"start": "node dist/main.js",
		"type-check": "tsc --noEmit",
		"lint": "eslint . --report-unused-disable-directives --max-warnings 0",

		"qa:console-check": "grep -r \"console\\.\" src/ --include=\"*.ts\" --include=\"*.tsx\" && exit 1 || exit 0",
		"qa:todo-check": "grep -r \"TODO\\|FIXME\\|HACK\" src/ --include=\"*.ts\" --include=\"*.tsx\" || exit 0"
	},

	"devDependencies": {
		"typescript": "^4.9.5",
		"@types/node": "^20.0.0",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",

		"vite": "^5.0.0",
		"@vitejs/plugin-react": "^4.0.0",
		"vite-plugin-svgr": "^4.0.0",

		"tailwindcss": "^3.4.0",
		"postcss": "^8.4.0",
		"autoprefixer": "^10.4.0",

		"i18next": "^23.0.0",
		"react-i18next": "^13.0.0",

		"eslint": "^8.56.0",
    "typescript-eslint": "^7.7.0",
		"eslint-plugin-react": "^7.32.0"
	}
}
